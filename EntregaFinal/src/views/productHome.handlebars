<div style="display: flex;justify-content:space-around;margin-bottom:60px;margin-top: 20px;padding: 30px;gap: 550px;">
    <h2 style="color: silver;text-align: center;margin: 0;font-family: cursive;text-decoration: underline;">Usuario {{email}}</h2>
    <button onclick="location.href='/users/logout'"
    style="border-radius: 8px;height: 25px;width: 100px;background-color: #000;color:  yellow;cursor: pointer;font-family: cursive;margin-top: 5px;">Logout</button>
</div>



<div style="display: flex;justify-content:center;margin-bottom:70px;padding: 5px;gap:40px;background: ;">
    <button onclick="location.href='/realTimeProducts'"
        style="border-radius: 8px;height: 25px;width: 200px;background-color: #000;color: rgb(18, 102, 180);cursor: pointer;font-family: cursive;margin-top: 5px;">
        realTimeProducts</button>
    <button onclick="location.href='/views/addProducts'"
        style="border-radius: 8px;height: 25px;width: 200px;background-color: #000;color: rgb(18, 102, 180);cursor: pointer;font-family: cursive;margin-top: 5px;">Agregar
        producto</button>
    <button onclick="location.href='/messages'"
        style="border-radius: 8px;height: 25px;width: 200px;background-color: #000;color: rgb(18, 102, 180);cursor: pointer;font-family: cursive;margin-top: 5px;">
        messages</button>
</div>

<h1
    style="color: rgb(212, 14, 107);text-align: center;margin: 5px 0;margin-bottom: 40px;font-family: cursive;font-size: 40px;background: #000;">
    Producto</h1>

<div style="display: flex;justify-content: center;margin-bottom: 50px;">
    <button type="submit" onclick="location.href='/api/products'"
            style="border-radius: 8px;height: 25px;width: 120px;background-color: #000;color: rgb(212, 14, 107);cursor: pointer;font-family: cursive;">Ir a productos</button>
</div>

<div class="product-gallery">
    <div class="product-container">
        <div class="product-image" style="background-image: url({{prod.thumbnails}})"></div>
        <div class="product-details">
            <h3>{{prod.title}}</h3>
            <p>{{prod.description}}</p>
            <p>Precio: ${{prod.price}}</p>
            <p>Categoria: {{prod.category}}</p>
            <p>Stock: {{prod.stock}}</p>
            <form action="/api/carts/:cid/product/{{prod._id}}" method="post">
                <button style="margin-top: 8px;background-color:whitesmoke;color: rgb(18, 102, 180);font-family: cursive;width: 140px;border-radius: 8px;cursor: pointer;">Agregar al carrito</button>
            </form>
        </div>
    </div>
</div>
