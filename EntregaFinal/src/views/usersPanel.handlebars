<h3 style="color: rgb(212, 14, 107);text-align: center;margin: 5px 0;margin: 40px 0;font-family: cursive;font-size: 40px;background: #000;">Panel de usuarios</h3>

<div style="display: flex;justify-content: center;margin-bottom: 50px;">
    <button type="submit" onclick="location.href='/api/products'"
            style="border-radius: 8px;height: 25px;width: 120px;background-color: #000;color: rgb(212, 14, 107);cursor: pointer;font-family: cursive;">Ir a productos</button>
</div>


<div style="color: rgb(212, 14, 107);text-align: center;margin: 5px 0;font-family: cursive;font-size: 15px;">
    <ul class="galleryUsersPanel">
    {{#each users}}
        <li class="containerUsersPanel">
            {{this._id}} - {{this.email}} - {{this.role}}
            <a class="userTextDecoration" href="/users/premium/{{this._id}}">Modificar rol</a>
            <a class="userTextDecoration" href="/users/deleteUser/{{this._id}}">Eliminar</a>
        </li>
    {{/each}}
    </ul>
</div>
